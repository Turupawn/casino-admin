<div class="container mx-auto px-4 py-8">
  <div class="mb-8">
    <div class="flex items-center justify-between mb-4">
      <h1 class="text-3xl font-bold text-gray-900">Casino Games Database</h1>
      <a href="<%= root_path %>" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
        ‚Üê Back to Dashboard
      </a>
    </div>
    <!-- Blockchain Information Header -->
    <div class="bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg p-6 mb-6 text-white">
      <% if @house_balance && @house_balance[:success] %>
        <!-- Balance and Token Info -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-6">
          <!-- ETH Balance Card -->
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 text-center">
            <div class="text-lg font-semibold">ETH Balance</div>
            <div class="text-2xl font-bold text-yellow-300"><%= sprintf("%.6f", @house_balance[:balance_eth]) %> ETH</div>
            <div class="text-xs opacity-75 mt-1"><%= @house_balance[:balance_wei] %> wei</div>
          </div>
          
          <!-- Gacha Token Card -->
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 text-center">
            <div class="text-lg font-semibold">Gacha Token Supply</div>
            <% if @house_balance[:gacha_total_supply] && @house_balance[:gacha_total_supply] > 0 %>
              <div class="text-2xl font-bold text-green-300"><%= sprintf("%.2f", @house_balance[:gacha_total_supply]) %></div>
            <% else %>
              <div class="text-2xl font-bold text-gray-300">N/A</div>
              <div class="text-xs opacity-75 mt-1">Supply Unknown</div>
            <% end %>
          </div>
          
          <!-- Contract Status Card -->
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 text-center">
            <div class="text-lg font-semibold">Contract Status</div>
            <div class="text-2xl font-bold text-green-300">Active</div>
            <div class="text-xs opacity-75 mt-1">Connected</div>
          </div>
        </div>
        
        <!-- Address Information -->
        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
          <h3 class="text-lg font-semibold mb-3 text-center">Blockchain Addresses</h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <!-- House Address -->
            <div class="text-center">
              <div class="text-sm font-medium text-blue-200 mb-1">House Address</div>
              <a href="<%= BlockchainConfig.block_explorer_url %><%= @house_balance[:house_address] %>" target="_blank" class="text-xs text-blue-200 hover:text-blue-100 underline break-all">
                <%= @house_balance[:house_address] %>
              </a>
            </div>
            
            <!-- Contract Address -->
            <div class="text-center">
              <div class="text-sm font-medium text-blue-200 mb-1">Contract Address</div>
              <a href="<%= BlockchainConfig.block_explorer_url %><%= @house_balance[:contract_address] %>" target="_blank" class="text-xs text-blue-200 hover:text-blue-100 underline break-all">
                <%= @house_balance[:contract_address] %>
              </a>
            </div>
            
            <!-- Gacha Token Address -->
            <% if @house_balance[:gacha_token_address].present? %>
            <div class="text-center">
              <div class="text-sm font-medium text-blue-200 mb-1">Gacha Token</div>
              <a href="<%= BlockchainConfig.block_explorer_url %><%= @house_balance[:gacha_token_address] %>" target="_blank" class="text-xs text-blue-200 hover:text-blue-100 underline break-all">
                <%= @house_balance[:gacha_token_address] %>
              </a>
            </div>
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="text-center">
          <p class="text-red-200 text-lg">Failed to fetch house balance</p>
          <% if @house_balance && @house_balance[:error] %>
            <p class="text-sm opacity-90 mt-2">Error: <%= @house_balance[:error] %></p>
          <% end %>
        </div>
      <% end %>
    </div>
    <!-- Statistics Card -->
    <div class="grid grid-cols-1 md:grid-cols-1 gap-6 mb-8">
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="p-2 bg-blue-100 rounded-lg">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Total Games Indexed</p>
            <p class="text-2xl font-semibold text-gray-900"><%= @total_games %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Games Table -->
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-medium text-gray-900">Recent Games</h2>
    </div>
    
    <% if @games.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Game ID</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Game State</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Player Address</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Bet Amount</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Timestamp</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Game Result</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @games.each do |game| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= link_to game_path(game), class: "font-mono font-semibold text-blue-600 hover:text-blue-800 hover:underline" do %>
                    #<%= game.game_id %>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                    <%= case game.game_state
                        when 'not_started' then 'bg-gray-100 text-gray-800'
                        when 'player_committed' then 'bg-yellow-100 text-yellow-800'
                        when 'hash_posted' then 'bg-blue-100 text-blue-800'
                        when 'revealed' then 'bg-green-100 text-green-800'
                        when 'forfeited' then 'bg-red-100 text-red-800'
                        else 'bg-gray-100 text-gray-800'
                        end %>">
                    <%= case game.game_state
                        when 'not_started' then 'Not Started'
                        when 'player_committed' then 'Committed'
                        when 'hash_posted' then 'Hash Posted'
                        when 'revealed' then 'Revealed'
                        when 'forfeited' then 'Forfeited'
                        else 'Unknown'
                        end %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <span class="font-mono text-xs"><%= truncate(game.player_address, length: 20) %></span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <span class="font-mono text-xs"><%= game.bet_amount.present? ? "#{(game.bet_amount.to_f / 1e18).round(6)} ETH" : "N/A" %></span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= game.commit_timestamp.strftime("%Y-%m-%d %H:%M:%S") %>
                  <% if game.house_randomness_timestamp.present? %>
                    <br>
                    <span class="text-xs text-blue-600 font-medium">
                      Duration: <%= ((game.house_randomness_timestamp - game.commit_timestamp) * 1000).round(0) %> ms
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <div class="flex items-center space-x-2">
                    <div class="flex items-center space-x-1">
                      <span class="text-xs text-gray-500">Player:</span>
                      <span class="font-mono text-xs font-semibold"><%= game.player_card.present? ? game.player_card.to_i : "N/A" %></span>
                    </div>
                    <span class="text-gray-400">vs</span>
                    <div class="flex items-center space-x-1">
                      <span class="text-xs text-gray-500">House:</span>
                      <span class="font-mono text-xs font-semibold"><%= game.house_card.present? ? game.house_card.to_i : "N/A" %></span>
                    </div>
                    <div class="ml-2">
                      <% case game.result %>
                      <% when 'player_won' %>
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                          Player Wins
                        </span>
                      <% when 'house_won' %>
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                          House Wins
                        </span>
                      <% when 'tie' %>
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                          Tie
                        </span>
                      <% else %>
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                          Pending
                        </span>
                      <% end %>
                    </div>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <!-- Pagination -->
      <div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6">
        <div class="flex-1 flex justify-between sm:hidden">
          <%= paginate @games %>
        </div>
        <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
          <div>
            <p class="text-sm text-gray-700">
              Showing
              <span class="font-medium"><%= @games.offset_value + 1 %></span>
              to
              <span class="font-medium"><%= [@games.offset_value + @games.limit_value, @games.total_count].min %></span>
              of
              <span class="font-medium"><%= @games.total_count %></span>
              results
            </p>
          </div>
          <div>
            <%= paginate @games %>
          </div>
        </div>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No games found</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by running the rake task to fetch games from the blockchain.</p>
        <div class="mt-6">
          <button type="button" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
            Refresh Data
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>
